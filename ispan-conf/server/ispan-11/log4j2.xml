<?xml version="1.0" encoding="UTF-8"?>
<Configuration
        name="InfinispanServerConfig" monitorInterval="60" shutdownHook="disable">
    <Appenders>
        <!-- Colored output on the console -->
        <Console name="STDOUT">
            <PatternLayout pattern="%d{HH:mm:ss,SSS} %-5p (%t) [%c] %m%throwable%n"/>
        </Console>

        <!-- Rolling file -->
        <RollingFile name="FILE" createOnDemand="true"
                     fileName="${sys:infinispan.server.log.path}/server.log"
                     filePattern="${sys:infinispan.server.log.path}/server.log.%d{yyyy-MM-dd}-%i">
            <Policies>
                <OnStartupTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="100 MB"/>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p (%t) [%c] %m%throwable%n"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="STDOUT" level="TRACE"/>
            <AppenderRef ref="FILE" level="TRACE"/>
        </Root>

        
        <Logger name="com.arjuna" level="WARN"/>
        
        <Logger name="org.infinispan" level="INFO"/>
        
        <Logger name="org.jgroups" level="WARN"/>
        
    </Loggers>
</Configuration>
